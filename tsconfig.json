{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"domain/*": ["src/domain/*"],
			"presentation/*": ["src/presentation/*"],
      "application/*": ["src/*"],
      "modules/*": ["src/modules/*"]
		},
		"types": ["node"],
		"lib": ["es2015", "scripthost", "dom"],
		"sourceMap": true,
		"removeComments": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"noStrictGenericChecks": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react"
	},
	"include": ["src/**/*", "env.exmpale.ts"],
	"exclude": ["node_modules", "static", "src/**/*.test.tsx"]
}
